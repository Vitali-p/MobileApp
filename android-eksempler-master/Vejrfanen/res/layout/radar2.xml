    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0px">
            <TextView android:id="@+id/RadarTextView" android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView android:id="@+id/RadarImageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ImageView>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <Button
                        android:id="@+id/radar_radar"
                        android:text="Radarbillede" />
                    <Button
                        android:id="@+id/radar_nedbørstype"
                        android:text="Nedbørstyper" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
