<?xml version="1.0" encoding="UTF-8"?>
<!-- Filnavn: res/layout/tre_knapper.xml -->
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#88a5db"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TableLayout
		android:padding="20dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >

		<ImageView android:id="@+id/ikon"
			android:src="@drawable/logo"
			android:paddingBottom="10dip"
			android:adjustViewBounds="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<EditText android:id="@+id/kaldenavn"
			android:hint="Hvad du vil hedde i chatten"
			android:singleLine="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<EditText android:id="@+id/besked"
			android:hint="Din besked"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<Button android:id="@+id/knap1"
			android:text="Opdater"
			android:textStyle="bold"
			android:padding="20dip"
			android:textSize="20dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<TextView android:id="@+id/chatmeddelelser"
			android:text="Her kommer chatmeddelelser"
			android:textColor="#FF000000"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

	</TableLayout>
</ScrollView>
