<?xml version="1.0" encoding="UTF-8"?>
<!-- Filnavn: res/layout/tre_knapper.xml -->
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#88a5db"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<TableLayout
		android:padding="20dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >

		<ImageView android:id="@+id/ikon"
			android:src="@drawable/logo"
			android:paddingBottom="10dip"
			android:adjustViewBounds="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<Button android:id="@+id/knap1"
			android:text="En knap"
			android:textStyle="bold"
			android:padding="20dip"
			android:textSize="20dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<Button android:id="@+id/knap2"
			android:text="En anden knap"
			android:padding="20dip"
			android:textSize="20dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<Button android:id="@+id/knap3"
			android:text="En tredje knap"
			android:padding="20dip"
			android:textSize="20dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<TextView android:id="@+id/velkomsttekst"
			android:text="Velkommen"
			android:layout_width="wrap_content" android:layout_height="wrap_content"/>

	</TableLayout>
</ScrollView>
