<?xml version="1.0" encoding="utf-8"?>
	<resources>

	<style name="InvaderTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
		<item name="android:buttonStyle">@style/InvaderButton</item>
		<item name="android:alertDialogStyle">@style/CustomDialog</item>
		<item name="android:background">@color/game_background</item>
	</style>
<!-- 	<style name="CustomDialog" parent="@android:style/Theme.Dialog.Alert"> -->
	<style name="CustomDialog" parent="@android:style/Theme.Dialog">
		<item name="android:textColor">@color/game_blue_highlight</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:windowBackground">@drawable/filled_box</item>
	</style>

	<style name="InvaderButton" parent="@android:style/Widget.Button">
		<item name="android:textSize">19sp</item>
  		<item name="android:background">@drawable/invader_btn</item>
  		<item name="android:textColor">@color/game_blue_highlight</item>
  		<item name="android:textStyle">bold</item>
	</style>

</resources>

